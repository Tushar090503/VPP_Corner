<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/linear_layout_for_availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_recyclerview_items"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/food_images"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kanda Poha"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 am to 10 am"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:layout_weight="0.8"
                    />

                <TextView
                    android:id="@+id/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:background="@drawable/add_button"
                    android:text="+"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/remove_from_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:background="@drawable/add_button"
                    android:text="-"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:fontFamily="@font/poppins"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

